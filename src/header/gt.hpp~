#ifndef _gt_hpp
#define _gt_hpp

namespace gt
{
        class config
        {
                private:
                       	int resx;
                       	int resy;
                       	long int seed;
                public:
                        config(); //constructor
                	void readconfig(); //read the config file data/config
                	int getresx(); //getting the x-resolution
                	int getresy(); //getting the y-resolution
                	long int getseed(); //getting the seed
        };
}


#endif
